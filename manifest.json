{
  "manifest_version": 3,
  "name": "Text Cleaner & Formatter",
  "version": "1.0",
  "description": "Clean up and format messy text with one click.",
  "permissions": ["clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png",

            "icons": {
          "16": "icons/icon16.png",
          "32": "icons/icon32.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
        }
        
  }
}
